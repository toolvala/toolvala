    <!-- Notification -->
    <div class="notification" id="notification"></div>

    <script>
        // DOM Elements
        const elements = {
            // Input elements
            minValue: document.getElementById('minValue'),
            maxValue: document.getElementById('maxValue'),
            quantity: document.getElementById('quantity'),
            numberType: document.getElementById('numberType'),
            decimalPlaces: document.getElementById('decimalPlaces'),
            decimalOptions: document.getElementById('decimalOptions'),
            uniqueNumbers: document.getElementById('uniqueNumbers'),
            sortedNumbers: document.getElementById('sortedNumbers'),
            secureRandom: document.getElementById('secureRandom'),
            
            // Button elements
            generateBtn: document.getElementById('generateBtn'),
            resetBtn: document.getElementById('resetBtn'),
            copyBtn: document.getElementById('copyBtn'),
            closeResults: document.getElementById('closeResults'),
            clearHistory: document.getElementById('clearHistory'),
            presetButtons: document.querySelectorAll('.preset-btn'),
            
            // Export buttons
            exportTxt: document.getElementById('exportTxt'),
            exportCsv: document.getElementById('exportCsv'),
            exportJson: document.getElementById('exportJson'),
            
            // Display elements
            resultsSection: document.getElementById('resultsSection'),
            resultNumbers: document.getElementById('resultNumbers'),
            rangeInfo: document.getElementById('rangeInfo'),
            quantityInfo: document.getElementById('quantityInfo'),
            typeInfo: document.getElementById('typeInfo'),
            
            // Statistics elements
            statMean: document.getElementById('statMean'),
            statMedian: document.getElementById('statMedian'),
            statMin: document.getElementById('statMin'),
            statMax: document.getElementById('statMax'),
            statStdDev: document.getElementById('statStdDev'),
            statSum: document.getElementById('statSum'),
            
            // History elements
            historyPanel: document.getElementById('historyPanel'),
            historyList: document.getElementById('historyList'),
            
            // Other elements
            loadingIndicator: document.getElementById('loadingIndicator'),
            notification: document.getElementById('notification')
        };

        // State variables
        let currentNumbers = [];
        let generationHistory = JSON.parse(localStorage.getItem('rngHistory')) || [];
        let lastGeneratedTime = null;

        // Initialize Event Listeners
        function initEventListeners() {
            // Generate button
            elements.generateBtn.addEventListener('click', generateNumbers);
            
            // Reset button
            elements.resetBtn.addEventListener('click', resetSettings);
            
            // Copy button
            elements.copyBtn.addEventListener('click', copyResults);
            
            // Close results button
            elements.closeResults.addEventListener('click', () => {
                elements.resultsSection.classList.remove('active');
            });
            
            // Clear history button
            elements.clearHistory.addEventListener('click', clearHistory);
            
            // Number type change
            elements.numberType.addEventListener('change', toggleDecimalOptions);
            
            // Input validation
            elements.minValue.addEventListener('change', validateRange);
            elements.maxValue.addEventListener('change', validateRange);
            elements.quantity.addEventListener('change', validateQuantity);
            
            // Preset buttons
            elements.presetButtons.forEach(button => {
                button.addEventListener('click', applyPreset);
            });
            
            // Export buttons
            elements.exportTxt.addEventListener('click', () => exportData('txt'));
            elements.exportCsv.addEventListener('click', () => exportData('csv'));
            elements.exportJson.addEventListener('click', () => exportData('json'));
            
            // Load history on page load
            loadHistory();
            
            // Generate initial numbers
            setTimeout(() => generateNumbers(), 500);
        }

        // Toggle decimal options based on number type
        function toggleDecimalOptions() {
            if (elements.numberType.value === 'decimal') {
                elements.decimalOptions.style.display = 'block';
            } else {
                elements.decimalOptions.style.display = 'none';
            }
        }

        // Validate range inputs
        function validateRange() {
            const min = parseInt(elements.minValue.value);
            const max = parseInt(elements.maxValue.value);
            
            if (min > max) {
                elements.maxValue.value = min + 1;
                showNotification('Maximum value adjusted to be greater than minimum', 'info');
            }
            
            // Check for very large ranges
            if (max - min > 1000000) {
                showNotification('Large ranges may impact performance. Consider a smaller range.', 'info');
            }
        }

        // Validate quantity input
        function validateQuantity() {
            const quantity = parseInt(elements.quantity.value);
            const min = parseInt(elements.minValue.value);
            const max = parseInt(elements.maxValue.value);
            const rangeSize = max - min + 1;
            
            if (quantity < 1) {
                elements.quantity.value = 1;
                showNotification('Quantity must be at least 1', 'error');
                return;
            }
            
            if (quantity > 1000) {
                elements.quantity.value = 1000;
                showNotification('Maximum quantity is 1000', 'error');
                return;
            }
            
            // Check if unique numbers are possible
            if (elements.uniqueNumbers.checked && quantity > rangeSize) {
                showNotification(`Cannot generate ${quantity} unique numbers from range ${min}-${max} (only ${rangeSize} possible values)`, 'error');
                elements.uniqueNumbers.checked = false;
            }
        }

        // Apply preset settings
        function applyPreset(event) {
            const button = event.currentTarget;
            const min = button.getAttribute('data-min');
            const max = button.getAttribute('data-max');
            const qty = button.getAttribute('data-qty');
            const type = button.getAttribute('data-type');
            
            elements.minValue.value = min;
            elements.maxValue.value = max;
            if (qty) elements.quantity.value = qty;
            if (type) elements.numberType.value = type;
            
            toggleDecimalOptions();
            showNotification(`Preset applied: ${button.textContent}`, 'success');
            
            // Auto-generate with new settings
            setTimeout(() => generateNumbers(), 300);
        }

        // Generate random numbers
        function generateNumbers() {
            const min = parseFloat(elements.minValue.value);
            const max = parseFloat(elements.maxValue.value);
            const quantity = parseInt(elements.quantity.value);
            const numberType = elements.numberType.value;
            const decimalPlaces = parseInt(elements.decimalPlaces.value);
            const uniqueOnly = elements.uniqueNumbers.checked;
            const sortNumbers = elements.sortedNumbers.checked;
            const secureMode = elements.secureRandom.checked;
            
            // Validate inputs
            if (isNaN(min) || isNaN(max) || isNaN(quantity)) {
                showNotification('Please enter valid numbers', 'error');
                return;
            }
            
            if (min >= max) {
                showNotification('Maximum value must be greater than minimum', 'error');
                return;
            }
            
            if (quantity < 1 || quantity > 1000) {
                showNotification('Quantity must be between 1 and 1000', 'error');
                return;
            }
            
            // Check unique numbers constraint
            const rangeSize = max - min;
            if (uniqueOnly && quantity > (numberType === 'integer' ? (max - min + 1) : Infinity)) {
                showNotification('Cannot generate unique numbers with current settings', 'error');
                return;
            }
            
            // Show loading indicator
            elements.loadingIndicator.style.display = 'block';
            elements.resultsSection.classList.remove('active');
            
            // Generate numbers (with slight delay to show loading)
            setTimeout(() => {
                try {
                    currentNumbers = [];
                    
                    if (secureMode) {
                        // Use cryptographically secure random numbers
                        generateSecureNumbers(min, max, quantity, numberType, decimalPlaces, uniqueOnly);
                    } else {
                        // Use standard Math.random()
                        generateStandardNumbers(min, max, quantity, numberType, decimalPlaces, uniqueOnly);
                    }
                    
                    // Sort if requested
                    if (sortNumbers) {
                        currentNumbers.sort((a, b) => a - b);
                    }
                    
                    // Update display
                    updateResultsDisplay(min, max, quantity, numberType);
                    
                    // Calculate and display statistics
                    calculateStatistics();
                    
                    // Add to history
                    addToHistory(currentNumbers, min, max, quantity, numberType);
                    
                    // Show results
                    elements.resultsSection.classList.add('active');
                    elements.copyBtn.disabled = false;
                    
                    // Hide loading
                    elements.loadingIndicator.style.display = 'none';
                    
                    // Show success notification
                    showNotification(`${quantity} random numbers generated successfully!`, 'success');
                    
                } catch (error) {
                    console.error('Error generating numbers:', error);
                    showNotification('Error generating numbers. Please try again.', 'error');
                    elements.loadingIndicator.style.display = 'none';
                }
            }, 300);
        }

        // Generate standard random numbers using Math.random()
        function generateStandardNumbers(min, max, quantity, numberType, decimalPlaces, uniqueOnly) {
            const generated = new Set();
            
            while (currentNumbers.length < quantity) {
                let randomNumber;
                
                if (numberType === 'integer') {
                    // Integer generation
                    randomNumber = Math.floor(Math.random() * (max - min + 1)) + min;
                } else {
                    // Decimal generation
                    randomNumber = Math.random() * (max - min) + min;
                    randomNumber = parseFloat(randomNumber.toFixed(decimalPlaces));
                }
                
                if (!uniqueOnly || !generated.has(randomNumber)) {
                    currentNumbers.push(randomNumber);
                    generated.add(randomNumber);
                }
                
                // Safety break for impossible unique requests
                if (uniqueOnly && generated.size >= (max - min + 1) && currentNumbers.length < quantity) {
                    showNotification('Cannot generate more unique numbers than range allows', 'warning');
                    break;
                }
            }
        }

        // Generate cryptographically secure random numbers
        function generateSecureNumbers(min, max, quantity, numberType, decimalPlaces, uniqueOnly) {
            try {
                // Generate random bytes using Web Crypto API
                const buffer = new Uint32Array(quantity * 2);
                crypto.getRandomValues(buffer);
                
                const generated = new Set();
                
                for (let i = 0; i < quantity; i++) {
                    // Use two random values for better distribution
                    const rand1 = buffer[i * 2] / 0xFFFFFFFF;
                    const rand2 = buffer[i * 2 + 1] / 0xFFFFFFFF;
                    const randomValue = (rand1 + rand2) / 2; // Combine for better distribution
                    
                    let randomNumber;
                    
                    if (numberType === 'integer') {
                        randomNumber = Math.floor(randomValue * (max - min + 1)) + min;
                    } else {
                        randomNumber = randomValue * (max - min) + min;
                        randomNumber = parseFloat(randomNumber.toFixed(decimalPlaces));
                    }
                    
                    // Handle unique constraint
                    if (!uniqueOnly || !generated.has(randomNumber)) {
                        currentNumbers.push(randomNumber);
                        generated.add(randomNumber);
                    } else {
                        // Try again with next random value
                        i--;
                    }
                }
            } catch (error) {
                console.warn('Secure random generation failed, falling back to standard:', error);
                generateStandardNumbers(min, max, quantity, numberType, decimalPlaces, uniqueOnly);
            }
        }

        // Update results display
        function updateResultsDisplay(min, max, quantity, numberType) {
            // Clear previous results
            elements.resultNumbers.innerHTML = '';
            
            // Update info display
            elements.rangeInfo.textContent = `${min} to ${max}`;
            elements.quantityInfo.textContent = quantity;
            elements.typeInfo.textContent = numberType.charAt(0).toUpperCase() + numberType.slice(1);
            
            // Add number bubbles
            currentNumbers.forEach((num, index) => {
                const bubble = document.createElement('div');
                bubble.className = 'number-bubble';
                bubble.textContent = num;
                bubble.title = `Random number ${index + 1}: ${num}`;
                elements.resultNumbers.appendChild(bubble);
            });
        }

        // Calculate and display statistics
        function calculateStatistics() {
            if (currentNumbers.length === 0) return;
            
            // Sort for median calculation
            const sorted = [...currentNumbers].sort((a, b) => a - b);
            
            // Calculate statistics
            const sum = currentNumbers.reduce((a, b) => a + b, 0);
            const mean = sum / currentNumbers.length;
            
            // Median
            let median;
            const mid = Math.floor(sorted.length / 2);
            if (sorted.length % 2 === 0) {
                median = (sorted[mid - 1] + sorted[mid]) / 2;
            } else {
                median = sorted[mid];
            }
            
            // Standard deviation
            const squaredDiffs = currentNumbers.map(num => Math.pow(num - mean, 2));
            const avgSquaredDiff = squaredDiffs.reduce((a, b) => a + b, 0) / currentNumbers.length;
            const stdDev = Math.sqrt(avgSquaredDiff);
            
            // Min and max
            const min = Math.min(...currentNumbers);
            const max = Math.max(...currentNumbers);
            
            // Update display
            elements.statMean.textContent = mean.toFixed(3);
            elements.statMedian.textContent = median.toFixed(3);
            elements.statMin.textContent = min;
            elements.statMax.textContent = max;
            elements.statStdDev.textContent = stdDev.toFixed(3);
            elements.statSum.textContent = sum.toFixed(2);
        }

        // Add generation to history
        function addToHistory(numbers, min, max, quantity, type) {
            const historyItem = {
                id: Date.now(),
                timestamp: new Date().toISOString(),
                numbers: [...numbers],
                settings: {
                    min,
                    max,
                    quantity,
                    type
                }
            };
            
            generationHistory.unshift(historyItem);
            
            // Keep only last 50 items
            if (generationHistory.length > 50) {
                generationHistory = generationHistory.slice(0, 50);
            }
            
            // Save to localStorage
            localStorage.setItem('rngHistory', JSON.stringify(generationHistory));
            
            // Update history display
            updateHistoryDisplay();
        }

        // Update history display
        function updateHistoryDisplay() {
            elements.historyList.innerHTML = '';
            
            if (generationHistory.length === 0) {
                const li = document.createElement('li');
                li.className = 'history-item';
                li.textContent = 'No generation history yet';
                elements.historyList.appendChild(li);
                return;
            }
            
            generationHistory.forEach(item => {
                const li = document.createElement('li');
                li.className = 'history-item';
                
                const time = new Date(item.timestamp).toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' });
                
                li.innerHTML = `
                    <div>
                        <small style="color: var(--gray-color);">${time}</small>
                        <div class="history-numbers">
                            ${item.numbers.slice(0, 5).map(num => 
                                `<span class="history-number">${num}</span>`
                            ).join('')}
                            ${item.numbers.length > 5 ? `<span class="history-number">+${item.numbers.length - 5}</span>` : ''}
                        </div>
                    </div>
                    <small style="color: var(--gray-color);">
                        ${item.settings.min}-${item.settings.max} (${item.settings.quantity})
                    </small>
                `;
                
                // Add click to restore
                li.addEventListener('click', () => {
                    restoreFromHistory(item);
                });
                
                elements.historyList.appendChild(li);
            });
        }

        // Load history from localStorage
        function loadHistory() {
            updateHistoryDisplay();
        }

        // Clear history
        function clearHistory() {
            if (generationHistory.length === 0) return;
            
            if (confirm('Are you sure you want to clear all generation history?')) {
                generationHistory = [];
                localStorage.removeItem('rngHistory');
                updateHistoryDisplay();
                showNotification('History cleared', 'success');
            }
        }

        // Restore settings from history item
        function restoreFromHistory(item) {
            elements.minValue.value = item.settings.min;
            elements.maxValue.value = item.settings.max;
            elements.quantity.value = item.settings.quantity;
            elements.numberType.value = item.settings.type;
            
            toggleDecimalOptions();
            
            // Set current numbers
            currentNumbers = [...item.numbers];
            updateResultsDisplay(item.settings.min, item.settings.max, item.settings.quantity, item.settings.type);
            calculateStatistics();
            elements.resultsSection.classList.add('active');
            elements.copyBtn.disabled = false;
            
            showNotification('Settings restored from history', 'success');
        }

        // Copy results to clipboard
        async function copyResults() {
            if (currentNumbers.length === 0) {
                showNotification('No results to copy', 'error');
                return;
            }
            
            const textToCopy = currentNumbers.join(', ');
            
            try {
                await navigator.clipboard.writeText(textToCopy);
                showNotification('Results copied to clipboard!', 'success');
            } catch (error) {
                console.error('Failed to copy:', error);
                
                // Fallback method
                const textArea = document.createElement('textarea');
                textArea.value = textToCopy;
                document.body.appendChild(textArea);
                textArea.select();
                document.execCommand('copy');
                document.body.removeChild(textArea);
                
                showNotification('Results copied to clipboard!', 'success');
            }
        }

        // Export data in different formats
        function exportData(format) {
            if (currentNumbers.length === 0) {
                showNotification('No results to export', 'error');
                return;
            }
            
            let data, mimeType, filename;
            const timestamp = new Date().toISOString().replace(/[:.]/g, '-');
            
            switch(format) {
                case 'txt':
                    data = `Random Numbers Generated: ${new Date().toLocaleString()}\n`;
                    data += `Range: ${elements.minValue.value} to ${elements.maxValue.value}\n`;
                    data += `Quantity: ${elements.quantity.value}\n`;
                    data += `Type: ${elements.numberType.value}\n\n`;
                    data += currentNumbers.join('\n');
                    mimeType = 'text/plain';
                    filename = `random-numbers-${timestamp}.txt`;
                    break;
                    
                case 'csv':
                    data = 'Index,Value\n';
                    currentNumbers.forEach((num, index) => {
                        data += `${index + 1},${num}\n`;
                    });
                    mimeType = 'text/csv';
                    filename = `random-numbers-${timestamp}.csv`;
                    break;
                    
                case 'json':
                    const exportData = {
                        generated: new Date().toISOString(),
                        settings: {
                            min: elements.minValue.value,
                            max: elements.maxValue.value,
                            quantity: elements.quantity.value,
                            type: elements.numberType.value,
                            unique: elements.uniqueNumbers.checked,
                            sorted: elements.sortedNumbers.checked,
                            secure: elements.secureRandom.checked
                        },
                        numbers: currentNumbers,
                        statistics: {
                            mean: parseFloat(elements.statMean.textContent),
                            median: parseFloat(elements.statMedian.textContent),
                            min: parseFloat(elements.statMin.textContent),
                            max: parseFloat(elements.statMax.textContent),
                            stdDev: parseFloat(elements.statStdDev.textContent),
                            sum: parseFloat(elements.statSum.textContent)
                        }
                    };
                    data = JSON.stringify(exportData, null, 2);
                    mimeType = 'application/json';
                    filename = `random-numbers-${timestamp}.json`;
                    break;
            }
            
            // Create download link
            const blob = new Blob([data], { type: mimeType });
            const url = URL.createObjectURL(blob);
            const link = document.createElement('a');
            link.href = url;
            link.download = filename;
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
            URL.revokeObjectURL(url);
            
            showNotification(`Exported as ${format.toUpperCase()}`, 'success');
        }

        // Reset all settings to default
        function resetSettings() {
            elements.minValue.value = 1;
            elements.maxValue.value = 100;
            elements.quantity.value = 1;
            elements.numberType.value = 'integer';
            elements.decimalPlaces.value = 2;
            elements.uniqueNumbers.checked = true;
            elements.sortedNumbers.checked = false;
            elements.secureRandom.checked = false;
            
            toggleDecimalOptions();
            elements.resultsSection.classList.remove('active');
            elements.copyBtn.disabled = true;
            
            showNotification('Settings reset to defaults', 'info');
        }

        // Show notification
        function showNotification(message, type) {
            elements.notification.textContent = message;
            elements.notification.className = `notification ${type} show`;
            
            setTimeout(() => {
                elements.notification.classList.remove('show');
            }, 3000);
        }

        // Toggle FAQ
        function toggleFAQ(event) {
            const question = event.currentTarget;
            question.classList.toggle('active');
            
            const answer = question.nextElementSibling;
            answer.classList.toggle('active');
        }

        // Initialize FAQ listeners
        function initFAQ() {
            const faqQuestions = document.querySelectorAll('.faq-question');
            faqQuestions.forEach(question => {
                question.addEventListener('click', toggleFAQ);
            });
        }

        // Initialize when page loads
        document.addEventListener('DOMContentLoaded', () => {
            initEventListeners();
            initFAQ();
            toggleDecimalOptions();
            
            // Add structured data for FAQ
            const faqStructuredData = {
                "@context": "https://schema.org",
                "@type": "FAQPage",
                "mainEntity": [
                    {
                        "@type": "Question",
                        "name": "What's the difference between pseudorandom and truly random numbers?",
                        "acceptedAnswer": {
                            "@type": "Answer",
                            "text": "Pseudorandom numbers are generated by mathematical algorithms and appear random but are deterministic. Truly random numbers come from physical processes and are non-deterministic."
                        }
                    },
                    {
                        "@type": "Question",
                        "name": "How does the 'cryptographically secure' option work?",
                        "acceptedAnswer": {
                            "@type": "Answer",
                            "text": "It uses the Web Crypto API's crypto.getRandomValues() method, which generates random numbers suitable for cryptographic applications from secure entropy sources."
                        }
                    },
                    {
                        "@type": "Question",
                        "name": "Can I generate negative random numbers?",
                        "acceptedAnswer": {
                            "@type": "Answer",
                            "text": "Yes, simply set a negative minimum value. For example, setting minimum to -100 and maximum to 100 will generate numbers between -100 and 100 inclusive."
                        }
                    }
                ]
            };
            
            const script = document.createElement('script');
            script.type = 'application/ld+json';
            script.textContent = JSON.stringify(faqStructuredData);
            document.head.appendChild(script);
            
            console.log('Random Number Generator Tool loaded - SEO optimized');
        });

        // Track usage analytics
        window.addEventListener('load', () => {
            const loadTime = performance.now();
            console.log(`Random Number Generator loaded in ${Math.round(loadTime)}ms`);
            
            const usageData = {
                tool: 'Random Number Generator',
                version: '3.0',
                features: ['custom-ranges', 'multiple-numbers', 'secure-random', 'statistics', 'history-tracking', 'export-options'],
                loadTime: Math.round(loadTime),
                timestamp: new Date().toISOString()
            };
            console.log('Usage Analytics:', usageData);
        });
    </script>
</body>
</html>
